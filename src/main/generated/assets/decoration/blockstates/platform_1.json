{
  "multipart": [
    {
      "apply": {
        "model": "decoration:block/platform_2"
      }
    },
    {
      "apply": {
        "model": "decoration:block/platform_1_extra"
      },
      "when": {
        "facing": "north"
      }
    },
    {
      "apply": {
        "model": "decoration:block/platform_1_extra",
        "uvlock": true,
        "y": 90
      },
      "when": {
        "facing": "east"
      }
    },
    {
      "apply": {
        "model": "decoration:block/platform_1_extra",
        "uvlock": true,
        "y": 180
      },
      "when": {
        "facing": "south"
      }
    },
    {
      "apply": {
        "model": "decoration:block/platform_1_extra",
        "uvlock": true,
        "y": 270
      },
      "when": {
        "facing": "west"
      }
    }
  ]
}